<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Journals</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-poppins bg-teal-100 flex flex-col min-h-screen">

    <!-- Top Navbar -->
    <nav class="bg-teal-600 text-white">
        <div class="container mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <a href="/" class="text-xl font-semibold">Mental Health Xcellerators</a>
                <button id="navbar-toggle" class="lg:hidden text-white" aria-label="Toggle navigation">
                    <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
                <div class="lg:flex hidden space-x-6">
                    <a href="/about-us" class="hover:text-teal-200">About Us</a>
                    <a href="/contact-us" class="hover:text-teal-200">Contact Us</a>
                    <a href="/user-profile" class="hover:text-teal-200">User Profile</a>
                    <% if (typeof user !== 'undefined') { %>
                        <a href="/logout" class="text-white hover:text-teal-200">Log Out</a>
                    <% } else { %>
                        <a href="/login" class="text-white hover:text-teal-200">Log In</a>
                    <% } %>
                </div>
            </div>
        </div>
        <!-- Mobile Menu -->
        <div class="lg:hidden hidden bg-teal-600" id="mobile-menu">
            <div class="container mx-auto px-4 py-2 flex flex-col space-y-3">
                <a href="/about-us" class="text-white hover:text-teal-200">About Us</a>
                <a href="/contact-us" class="text-white hover:text-teal-200">Contact Us</a>
                <a href="/user-profile" class="text-white hover:text-teal-200">User Profile</a>
                <% if (typeof user !== 'undefined') { %>
                    <a href="/logout" class="text-white hover:text-teal-200">Log Out</a>
                <% } else { %>
                    <a href="/login" class="text-white hover:text-teal-200">Log In</a>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto px-4 mt-8 mb-8 flex-1">
        <div class="max-w-2xl mx-auto">
            <!-- Title -->
            <h1 class="text-center text-3xl font-bold text-teal-800 mb-6">Anonymous Journal</h1>
            
            <!-- Prompt Section -->
            <div class="bg-teal-50 border border-teal-200 rounded-lg p-4 mb-6">
                <h5 class="text-lg font-semibold text-teal-700">Today's Prompt:</h5>
                <p class="mt-2 text-teal-600"><%= prompt %></p>
            </div>

            <!-- Journal Form -->
            <form action="/submit-journal" method="POST" class="mb-8">
                <div class="mb-4">
                    <textarea name="thought" 
                        class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
                        rows="5" placeholder="Write your thoughts here..." required></textarea>
                </div>
                <button type="submit" 
                    class="w-full bg-teal-600 text-white py-3 rounded-lg hover:bg-teal-700 transition duration-200">
                    Submit Your Thought
                </button>
            </form>

            <!-- Journal Entries Section -->
            <h2 class="text-2xl font-semibold text-teal-800 mb-4">Past Journal Entries</h2>
            <% if (journals && journals.length > 0) { %>
                <% journals.forEach(entry => { %>
                    <div class="bg-white border border-teal-100 rounded-lg p-4 mb-4 shadow-sm">
                        <p class="text-teal-700"><%= entry.thought %></p>
                        <p class="text-sm text-teal-500 text-right mt-2">
                            Submitted on <%= new Date(entry.createdAt).toLocaleString() %>
                        </p>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-teal-600">No journal entries available yet. Start by sharing your first thought!</p>
            <% } %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-teal-600 text-white text-center py-4 mt-8">
        <div class="container mx-auto">
            <p>&copy; 2024 Mental Health Xcellerators. All rights reserved.</p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Navbar Toggle
        document.getElementById('navbar-toggle').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>
</body>
</html>