<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-teal-100 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h2 class="text-2xl font-bold text-teal-800 mb-6">Admin Password Reset</h2>
        
        <!-- Error/Success Messages -->
        <div id="message" class="mb-4 text-center hidden"></div>

        <!-- Password Reset Form -->
        <form id="resetForm" class="space-y-4">
            <!-- Email Input -->
            <div>
                <label class="block text-teal-700 mb-2">User Email</label>
                <input type="email" id="email" name="email" 
                       class="w-full p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500"
                       required>
            </div>

            <!-- Admin Password -->
            <div>
                <label class="block text-teal-700 mb-2">Admin Password</label>
                <input type="password" id="adminPassword" name="adminPassword" 
                       class="w-full p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500"
                       required>
            </div>

            <!-- New Password -->
            <div>
                <label class="block text-teal-700 mb-2">New Password</label>
                <input type="password" id="newPassword" name="newPassword" 
                       class="w-full p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500"
                       required minlength="8">
            </div>

            <!-- Submit Button -->
            <button type="submit" 
                    class="w-full bg-teal-600 text-white py-2 rounded-md hover:bg-teal-700 transition">
                Reset Password
            </button>
        </form>
    </div>

    <script>
        document.getElementById('resetForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const messageEl = document.getElementById('message');
            messageEl.classList.add('hidden');

            const formData = {
                email: document.getElementById('email').value,
                adminPassword: document.getElementById('adminPassword').value,
                newPassword: document.getElementById('newPassword').value
            };

            try {
                const response = await fetch('/forgot-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (!response.ok) {
                    messageEl.textContent = data.error || 'An error occurred';
                    messageEl.classList.remove('hidden', 'text-green-600');
                    messageEl.classList.add('text-red-600');
                    return;
                }

                messageEl.textContent = data.message || 'Password reset successfully!';
                messageEl.classList.remove('hidden', 'text-red-600');
                messageEl.classList.add('text-green-600');
                
                // Clear form on success
                document.getElementById('resetForm').reset();
                
            } catch (error) {
                console.error('Error:', error);
                messageEl.textContent = 'Failed to connect to server';
                messageEl.classList.remove('hidden', 'text-green-600');
                messageEl.classList.add('text-red-600');
            }
            
            messageEl.classList.remove('hidden');
        });
    </script>
