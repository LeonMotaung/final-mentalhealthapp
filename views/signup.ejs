<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-poppins bg-teal-100 flex flex-col min-h-screen">

    <!-- Top Navbar -->
    <nav class="bg-teal-600 text-white">
        <div class="container mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <a href="#" class="text-xl font-semibold">Mental Health Xcellerators</a>
                <button id="navbar-toggle" class="lg:hidden text-white" aria-label="Toggle navigation">
                    <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
                <div class="lg:flex hidden space-x-6">
                    <a href="/about-us" class="hover:text-teal-200">About Us</a>
                    <a href="/contact-us" class="hover:text-teal-200">Contact Us</a>
                    <span id="authButton" class="hover:text-teal-200"></span>
                </div>
            </div>
        </div>
        <!-- Mobile Menu -->
        <div class="lg:hidden hidden bg-teal-600" id="mobile-menu">
            <div class="container mx-auto px-4 py-2 flex flex-col space-y-3">
                <a href="/about-us" class="text-white hover:text-teal-200">About Us</a>
                <a href="/contact-us" class="text-white hover:text-teal-200">Contact Us</a>
                <span id="mobile-authButton" class="text-white hover:text-teal-200"></span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto px-4 mt-8 mb-8 flex-1">
        <div class="max-w-lg mx-auto">
            <h2 class="text-3xl font-bold text-center text-teal-800 mb-6">Create an Account</h2>
            <form id="signupForm" class="bg-white p-6 rounded-lg shadow-md">
                <div class="space-y-4">
                    <div>
                        <input type="text" name="name" 
                            class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500"
                            placeholder="Name" required>
                    </div>
                    <div>
                        <input type="email" name="email" 
                            class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500"
                            placeholder="Email" required>
                    </div>
                    <div>
                        <input type="password" name="password" 
                            class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500"
                            placeholder="Password" required>
                    </div>
                    <div>
                        <input type="number" name="age" 
                            class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500"
                            placeholder="Age" required min="0">
                    </div>
                    <div>
                        <input type="text" name="address" 
                            class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500"
                            placeholder="Address">
                    </div>
                    <div>
                        <input type="text" name="postcode" 
                            class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500"
                            placeholder="Postcode" required>
                    </div>
                    <div>
                        <input type="tel" name="phone" 
                            class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500"
                            placeholder="Phone" required>
                    </div>
                    <div>
                        <select name="faculty" 
                            class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500" required>
                            <option value="" disabled selected>Select Faculty</option>
                            <option value="Faculty of Arts & Humanities">Faculty of Arts & Humanities</option>
                            <option value="Faculty of Community & Health Science">Faculty of Community & Health Science</option>
                            <option value="Faculty of Dentistry">Faculty of Dentistry</option>
                            <option value="Faculty of Economics & Management Science">Faculty of Economics & Management Science</option>
                            <option value="Faculty of Education">Faculty of Education</option>
                            <option value="Faculty of Law">Faculty of Law</option>
                            <option value="Faculty of Natural Science">Faculty of Natural Science</option>
                        </select>
                    </div>
                    <div>
                        <input type="text" name="hometown" 
                            class="w-full p-3 border border-teal-300 rounded-lg focus:ring-2 focus:ring-teal-500"
                            placeholder="Hometown" required>
                    </div>
                    <div>
                        <button type="submit" 
                            class="w-full bg-teal-600 text-white p-3 rounded-lg hover:bg-teal-700 transition duration-200">
                            Sign Up
                        </button>
                    </div>
                </div>
            </form>
            <div class="text-center mt-4 text-teal-700">
                Already have an account? <a href="/login" class="hover:text-teal-800 font-medium">Log in here</a>
            </div>
            <div id="errorMessage" class="text-red-500 text-center mt-4"></div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-teal-600 text-white text-center py-4 mt-8">
        <div class="container mx-auto">
            <p>&copy; 2024 Mental Health Xcellerators. All rights reserved.</p>
        </div>
    </footer>

    <!-- JavaScript -->
    <script>
        // Navbar Toggle
        document.getElementById('navbar-toggle').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });

        // Auth Button Logic
        const isLoggedIn = false; // Update this based on actual auth state
        const authButton = document.getElementById('authButton');
        const mobileAuthButton = document.getElementById('mobile-authButton');

        function updateAuthButtons() {
            if (isLoggedIn) {
                authButton.innerHTML = `<a href="/logout" class="hover:text-teal-200">Log Out</a>`;
                mobileAuthButton.innerHTML = `<a href="/logout" class="block">Log Out</a>`;
            } else {
                authButton.innerHTML = `<a href="/login" class="hover:text-teal-200">Log In</a>`;
                mobileAuthButton.innerHTML = `<a href="/login" class="block">Log In</a>`;
            }
        }
        updateAuthButtons();

        // Form Submission Handler
        document.getElementById('signupForm').addEventListener('submit', async function (event) {
            event.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch('/api/applicant', {
                    method: 'POST',
                    body: JSON.stringify(data),
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    window.location.href = '/login';
                } else {
                    document.getElementById('errorMessage').textContent = result.message;
                }
            } catch (error) {
                document.getElementById('errorMessage').textContent = 'Error: Unable to submit form';
            }
        });
    </script>
</body>
</html>